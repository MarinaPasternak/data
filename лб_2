import os
import math
print("Варіант-22, сума елементів") 
print("ФПМ, КМ-71, Пастернак М.О.")
circle='1'
while(circle=='1'):
	try: x=float(input("Введіть значеняя х: "))
	except ValueError: x=float(input("Попереднє введене значення не э числом, ввдіть нове значення х: "))
	if x==1: x=float(input("Попереднє введене значення не входить до ОДЗ, ввдіть нове значення х: "))
	try: n=int(input("Введіть кількість елементів: "))
	except ValueError: n=int(input("Попереднє введене значення не э числом, ввдіть нову кількість елементів: "))
	if n==0: n=int(input("Кількість елементів не повина дорівнювати 0, ввдіть нову кількість елементів: "))
	if n>50: n=int(input("Кількість елементів занадто велика, ввдіть нову кількість елементів: "))
	s=0
	for i in range (1,n): 
		s+=math.pow((2*x+1),i)/(x-1)
	print("Сума елементів",s)
	circle=input("Бажаєте ввести нові значення? Якщо так введіть 1")
